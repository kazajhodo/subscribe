<config>
    <modules>
        <Ash_Subscribe>
             <version>0.0.1</version>
        </Ash_Subscribe>
    </modules>

    <frontend>
        <routers>
            <ash_subscribe>
                <use>standard</use>
                <args>
                    <module>Ash_Subscribe</module>
                    <frontName>subscribe</frontName>
                </args>
            </ash_subscribe>
        </routers>

        <layout>
            <updates>
                <ash_subscribe>
                    <file>ash_subscribe.xml</file>
                </ash_subscribe>
            </updates>
        </layout>
    </frontend>

    <global>
        <helpers>
            <ash_subscribe>
                <class>Ash_Subscribe_Helper</class>
            </ash_subscribe>
        </helpers>
    </global>

    <default>
        <ash_subscribe>
            <general>
                <enabled>1</enabled>
            </general>
        </ash_subscribe>
    </default>
</config>
